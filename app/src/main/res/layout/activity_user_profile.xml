<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/background_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/background" />

            <TextView
                android:id="@+id/Txt_User_Profile_Heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="45dp"
                android:fontFamily="@font/lazy_dog"
                android:text="User Profile"
                android:textColor="@color/black"
                android:textSize="45dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/background_img" />

            <EditText
                android:id="@+id/Edt_User_Profile_Firstname"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:fontFamily="@font/lazy_dog"
                android:hint="@string/FirstName"
                android:inputType="none"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.538"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Txt_User_Profile_Heading" />

            <EditText
                android:id="@+id/Edt_User_Profile_Lastname"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:fontFamily="@font/lazy_dog"
                android:hint="@string/LastName"
                android:inputType="none"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.538"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Edt_User_Profile_Firstname" />

            <EditText
                android:id="@+id/Edt_User_Profile_Username"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:fontFamily="@font/lazy_dog"
                android:hint="@string/Username"
                android:inputType="none"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="34sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.538"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Edt_User_Profile_Lastname" />

            <EditText
                android:id="@+id/Edt_User_Profile_Email"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:fontFamily="@font/lazy_dog"
                android:hint="@string/Email"
                android:inputType="none"
                android:textAlignment="center"
                android:textColor="#070707"
                android:textColorHint="@color/gray"
                android:textSize="34sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.538"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Edt_User_Profile_Username" />

            <EditText
                android:id="@+id/Edt_User_Profile_Password"
                android:layout_width="350dp"
                android:layout_height="59dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:fontFamily="@font/lazy_dog"
                android:hint="@string/password"
                android:inputType="none"
                android:textAlignment="center"
                android:textColor="#070707"
                android:textColorHint="@color/gray"
                android:textSize="34sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.538"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Edt_User_Profile_Email" />

            <EditText
                android:id="@+id/Edt_User_Profile_ConfirmPassword"
                android:layout_width="350dp"
                android:layout_height="57dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:fontFamily="@font/lazy_dog"
                android:hint="@string/conform_password"
                android:inputType="none"
                android:textAlignment="center"
                android:textColor="#070707"
                android:textColorHint="@color/gray"
                android:textSize="34sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.538"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Edt_User_Profile_Password" />

            <Button
                android:id="@+id/Btn_User_Profile"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/login_signup_button"
                android:fontFamily="@font/lazy_dog"
                android:text="@string/edit_details"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="34sp"
                android:textStyle="bold"
                app:backgroundTint="@color/purple_700"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.538"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Edt_User_Profile_ConfirmPassword" />

            <Button
                android:id="@+id/Btn_User_Profile_Update_Now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Now"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/Btn_User_Profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.98" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>